        <h2 class="accordion-header" id="section2">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#section2Content" aria-expanded="false" aria-controls="section2Content">
                Настройки
            </button>
        </h2>
        <div id="section2Content" class="accordion-collapse collapse" aria-labelledby="section2" data-bs-parent="#sidebarAccordion">
            <div class="accordion-body">
