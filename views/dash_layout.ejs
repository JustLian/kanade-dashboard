<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"> -->
    <script src="/jquery.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <title>Kanade Dashboard</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        #sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: -250px;
            background-color: #111;
            transition: 0.3s;
            padding-top: 60px;
            z-index: 1;
        }

        #sidebar a {
            padding: 15px 25px;
            text-align: left;
            text-decoration: none;
            font-size: 18px;
            color: #818181;
            display: block;
            transition: 0.2s;
        }

        #sidebar a:hover {
            color: #f1f1f1;
        }

        #content {
            margin-left: 0;
            padding: 0;
        }

        #open-btn {
            font-size: 30px;
            position: absolute;
            left: 0;
            top: 0;
            padding: 20px;
            cursor: pointer;
            color: white;
        }

        #open-btn:hover {
            color: #f1f1f1;
        }

        #close-btn {
            font-size: 30px;
            position: absolute;
            left: 200px;
            top: 0;
            padding: 20px;
            cursor: pointer;
            color: white;
        }

        #close-btn:hover {
            color: #f1f1f1;
        }
    </style>
</head>
<body style="background-color: black;">

    <div id="sidebar">
        <div id="close-btn">&#9665;</div>
        <a href="/dashboard/guilds">Выбрать сервер</a>
        <a href="/dashboard/auto_messages">Авто-сообщения</a>
    </div>

    <div id="content">
        <div id="open-btn">&#9665;</div>
        <div style="margin-top: 4.5rem; margin-left: 1rem;">
            <div class="d-flex justify-content-center align-items-center parent">
                <div class="d-flex align-items-center">
                    <img src="<%- img %>" class="rounded-circle m-2" style="height: 2.3rem">
                    <h2 class="text-white m-0"><%- server_name %></h2>
                </div>
            </div>
            <%- dash %>

            <% if (addButton === true) { %>
                <div class="text-center">
                  <button onclick="updateGuild();" class="btn btn-light">Submit</button>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        document.getElementById("open-btn").addEventListener("click", function() {
            document.getElementById("sidebar").style.left = "0";
        });

        document.getElementById("close-btn").addEventListener("click", function() {
            document.getElementById("sidebar").style.left = "-250px";
        });

        $(document).ready(function() {
                $('.channel-select').select2();
        });

        let checks = {};
        const fields = [];

        function setCheck(id, value) {
            checks[id] = value;
        }

        function toggleCheck(id) {
            checks[id] = !checks[id]
        }

        function updateGuild() {
            let data = {};
            fields.forEach((id) => {
                const parts = id.split('-');
                const category = parts[0];
                const option = parts[1];

                if (data[category] === undefined) {
                    data[category] = {};
                }

                data[category][option] = document.getElementById(id).value;
            });

            Object.keys(checks).forEach((key) => {
                const parts = key.split('-');
                const category = parts[0];
                const option = parts[1];

                if (data[category] === undefined) {
                    data[category] = {};
                }

                data[category][option] = checks[key];
            });
            
            const request = new Request('/updateData', {
                method: 'POST',
                body: JSON.stringify({data: data}),
                headers: {
                    'Content-Type': 'application/json',
                    'Cookie': document.cookie
                },
            });
            fetch(request)
                .then(response => response.json())
                .then(data => console.log(data))
                .catch(error => console.error('Error:', error));
        }
    </script>

    <%- additional %>

</body>
</html>
