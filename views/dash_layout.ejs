    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* CSS to style the sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: -250px; /* Hide the sidebar initially */
            width: 250px;
            height: 100%;
            background-color: #333;
            transition: left 0.3s; /* Add a transition for smooth sliding effect */
            z-index: 1;
        }

        /* CSS for the button to show/hide the sidebar */
        .sidebar-toggle {
            position: fixed;
            top: 20px;
            left: 20px;
            cursor: pointer;
            color: #fff;
            font-size: 24px;
        }

        /* CSS for the content area */
        .content {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            padding: 20px;
            background-color: #eee;
            transition: left 0.3s;
        }

        /* CSS for the full-width sidebar */
        .full-width-sidebar {
            left: 0; /* Show the sidebar, making it full-width */
        }
    </style>
</head>
<body>
