<!-- TEXT INPUT -->
<div class="form-group">
    <label for="textInput">Text / Integer Input:</label>
    <input type="text" class="form-control" id="textInput" placeholder="Enter text or number">
</div>

<!-- DATE PICKER -->
<div class="form-group">
    <label for="datePicker">Date Picker:</label>
    <input type="date" class="form-control" id="datePicker">
</div>

<!-- COLOR CHOOSING -->
<div class="form-group">
    <label for="colorPicker">Color Picker:</label>
    <input type="color" class="form-control" id="colorPicker">
</div>

<!-- DROPDOWN CHOOSING -->
<div class="form-group">
    <label for="singleSelect">Single Dropdown:</label>
    <select class="form-control" id="singleSelect">
        <option value="option1">Option 1</option>
        <option value="option2">Option 2</option>
        <option value="option3">Option 3</option>
    </select>
</div>

<!-- CHECKBOX (SINGLE) -->
<div class="form-check">
    <input class="form-check-input" type="checkbox" id="singleCheckbox">
    <label class="form-check-label" for="singleCheckbox">
        Single Checkbox
    </label>
</div>

<!-- CHECKBOX (MULTIPLE) -->
<div class="form-group">
    <label for="multipleCheckboxGroup">Multiple Checkbox Choice</label>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkboxOption1">
        <label class="form-check-label" for="checkboxOption1">Option 1</label>
    </div>
</div>